{
  "permissions": {
    "deny": [
      "Read(./.env*)",
      "Read(./secrets/**)",
      "Read(./.git/**)",
      "Read(./node_modules/**)",
      "Read(./vendor/**)",
      "Read(./dist/**)",
      "Read(./build/**)",
      "Read(./target/**)",
      "Read(./*.pem)",
      "Read(./*.key)",
      "Read(./*.p12)",
      "Read(./*.crt)",
      "Read(./*.pfx)",
      "Read(./config/database.*)",
      "Read(./config/credentials.*)",
      "Read(./.aws/**)",
      "Read(./.gcp/**)",
      "Read(./.azure/**)",
      "Read(./terraform.tfvars)",
      "Read(./ansible-vault.*)",
      "Read(./.docker/config.json)",
      "Read(./docker-compose.override.yml)",
      "Read(./.kube/config)",
      "Read(./helm/values.prod.yaml)",
      "Read(./private/**)",
      "Read(./confidential/**)",
      "Read(./.ssh/**)",
      "Read(./backup/**)",
      "Read(./*.sql)",
      "Read(./*.dump)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(ssh:*)",
      "Bash(scp:*)",
      "Bash(rsync:*)",
      "Bash(*:.env*)",
      "WebFetch(*)"
    ],
    "allow": [
      "Read(./src/**)",
      "Read(./app/**)",
      "Read(./lib/**)",
      "Read(./components/**)",
      "Read(./pages/**)",
      "Read(./routes/**)",
      "Read(./controllers/**)",
      "Read(./models/**)",
      "Read(./views/**)",
      "Read(./tests/**)",
      "Read(./test/**)",
      "Read(./__tests__/**)",
      "Read(./spec/**)",
      "Read(./docs/**)",
      "Read(./README.md)",
      "Read(./CHANGELOG.md)",
      "Read(./LICENSE)",
      "Read(./package.json)",
      "Read(./requirements.txt)",
      "Read(./Gemfile)",
      "Read(./composer.json)",
      "Read(./pom.xml)",
      "Read(./build.gradle)",
      "Read(./Cargo.toml)",
      "Read(./.claude/**)",
      "Edit(./.claude/enterprise-log.md)",
      "Write(./.claude/enterprise-log.md)",
      "Bash(npm run test)",
      "Bash(npm run lint)",
      "Bash(npm run build)",
      "Bash(yarn test)",
      "Bash(pytest)",
      "Bash(mvn test)",
      "Bash(gradle test)",
      "Bash(cargo test)"
    ]
  },
  "hooks": {
    "PostToolUse": {
      "*": "echo \"$(date '+%Y-%m-%d %H:%M:%S') - ACTION: $CLAUDE_TOOL_NAME on $CLAUDE_FILE_PATHS\" >> /enterprise-log.md"
    }
  },
  "dataRetention": "project-only",
  "telemetryEnabled": false
}
